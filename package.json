{
    "name": "sveltekit-customauth",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "svelte-kit sync && npm run lint && vite build",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "eslint .",
        "format": "npm run lint -- --fix && prettier --plugin-search-dir . --write .",
        "prisma": "prisma",
        "prisma:gen": "npm run prisma -- generate",
        "prisma:dev": "npm run prisma -- db push",
        "prisma:seed": "npm run prisma:dev && cross-env NODE_ENV=development npm run prisma -- db seed"
    },
    "engines": {
        "node": ">=18.12.1"
    },
    "prisma": {
        "seed": "node --loader ts-node/esm ./prisma/seed.ts"
    },
    "dependencies": {
        "@iconify-json/ph": "^1.1.3",
        "@octokit/oauth-app": "^4.1.0",
        "@prisma/client": "^4.7.1",
        "@trpc/client": "^10.4.3",
        "@trpc/server": "^10.4.3",
        "cookie": "^0.5.0",
        "devalue": "^4.2.0",
        "slug": "^8.2.2",
        "superjson": "^1.11.0",
        "unplugin-icons": "^0.14.14",
        "uuid": "^9.0.0",
        "zod": "^3.19.1"
    },
    "devDependencies": {
        "@sveltejs/adapter-node": "^1.0.0-next.102",
        "@sveltejs/kit": "^1.0.0-next.571",
        "@tailwindcss/forms": "^0.5.3",
        "@types/chance": "^1.1.3",
        "@types/node": "^18.11.10",
        "@types/slug": "^5.0.3",
        "@types/uuid": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "autoprefixer": "^10.4.13",
        "chance": "^1.1.9",
        "cross-env": "^7.0.3",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-svelte": "^2.14.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "postcss": "^8.4.19",
        "prettier": "^2.8.0",
        "prettier-plugin-prisma": "^4.4.0",
        "prettier-plugin-svelte": "^2.8.1",
        "prettier-plugin-tailwindcss": "^0.2.0",
        "prisma": "^4.7.1",
        "svelte": "^3.53.1",
        "svelte-check": "^2.10.0",
        "svelte-preprocess": "^4.10.7",
        "tailwindcss": "^3.2.4",
        "ts-node": "^10.9.1",
        "tslib": "^2.4.1",
        "typescript": "^4.9.3",
        "vite": "^3.2.4"
    }
}
